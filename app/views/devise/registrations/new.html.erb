<div id="signup-page">
  <div class="container">
    <div class="row-fluid">
      <div class="span4 offset4">
        <div class="text-center">
          <div class="sky-logo"><i class="icon-cloud"></i> <span>SkyHQ</span></div>
        </div>
        <div class="page-bg">
          <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <h2 class="no-top-margin">Sign up</h2>
            <%= f.error_notification %>

            <%= f.input :email, autofocus: true, required: true, label: false, input_html: {class: "span12"}, placeholder: "email address" %>
            <%= f.input :password, :required => true, label: false, input_html: {class: "span12"}, placeholder: "password" %>
            <%= f.input :password_confirmation, label: false, :required => true, input_html: {class: "span12"}, placeholder: "password again" %>
           
            <button type="submit" class="btn btn-link btn-large">
              submit <i class='icon-lock'></i>
            </button>

            <div class="clearfix"></div>
            <hr/>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
      <div class="span2 sidebar-info" style="color:#3d4450;">
        <h3>Thank You!</h3>
        <p>We promise to provide the best experience and customer support youâ€™ve ever seen.</p>
        <hr/>
        <h1>156</h1>
        <p class="thin">others use SkyHQ daily</p>
        <hr/>
        <h1>12</h1>
        <p class="thin">countries SkyHQ helps</p>
      </div>
    </div>
  </div>

</div>
