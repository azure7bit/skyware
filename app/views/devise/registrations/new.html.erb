<% content_for :header do %>
  <%= render 'shared/login' %>
<% end %>

<!-- <div class="modal" id="register-modal"> -->
  <div class="modal-header">
    <h3>Sign Up</h3>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: 'register') do |f| %>
    <div class="modal-body">

      <div class="reg-col uploader" style="float: left; margin-right: 20px;">
        <fieldset>
          <%= render partial: 'shared/uploader', locals: {f: f, type: :avatar, scale: 80} %>
        </fieldset>
      </div>

      <div class="reg-col" style="float: left;">
        <fieldset>
          <%= text(:name,     form: f, popover: {content: 'Enter your first and last name.'},   placeholder: 'Full Name', tabindex: 1).html_safe %>
          <%= text(:username, form: f, popover: {content: 'Choose a unique handle.'},           placeholder: 'Username',  tabindex: 2).html_safe %>
          <%= text(:email,    form: f, popover: {content: 'Enter your e-mail address.'},        placeholder: 'E-mail',    tabindex: 3).html_safe %>
          <%= text(:bio,      form: f, popover: {content: 'Enter a few words about yourself.'}, placeholder: 'About You', tabindex: 4).html_safe %>

          <%= password(:password, form: f, popover: {content: 'Six to twelve characters. Choose something tricky.'}, tabindex: 5).html_safe %>
          <%= password(:password_confirmation, form: f, popover: {content: 'Re-enter your password for confirmation.'},
                       placeholder: 'Confirm Password', tabindex: 6).html_safe %>

          <%= f.submit "Create Account", id: 'signup-button', class: 'btn btn-primary' %>
          <span class="login">Have an account? <a href="/login">Login</a></span>
        </fieldset>
      </div>
    </div>
    <div class="modal-footer">
      <fieldset>
        <span class="facebook-connect">
          <span style="font-size: 14px;font-weight:bold;margin-right:10px">Or Signin with...</span>
          <a href="/auth/facebook"><img src="/assets/facebook-signin-btn.png" width="130" height="25"></a>
          <a href="/auth/twitter"><img src="/assets/twitter-signin-btn.png" width="130" height="25"></a>
          <a href="/auth/linkedin"><img src="/assets/linkedin-signin-btn.png" width="130" height="25"></a>
       	</span>
      </fieldset>
    </div>
  <% end %>
  <!-- </div> -->

<script>
  var errors = <%= resource.errors.to_json.html_safe %>;
</script>


