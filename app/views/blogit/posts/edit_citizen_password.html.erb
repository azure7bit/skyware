<body>
<!--=== Style Switcher ===-->    
   

    
<div class="container">
    <!--Reg Block-->
    <div class="reg-block">
        <div class="reg-block-header">
            <h2>Change Password</h2>

        </div>
       <%= form_for(@user, :url => save_citizen_password_path, :html => { :method => :put }) do |f| %>
 <%= flash[:notice] %>
        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="icon-lock"></i></span>
            <%= f.password_field :password, :required => true ,:class=>"form-control margin-bottom-20",:placeholder=>"New Password" %>
        </div>
        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="icon-key"></i></span>
             <%= f.password_field :password_confirmation, :required => true ,:class=>"form-control margin-bottom-20",:placeholder=>"New Password Confirmation" %>
        </div>
        <hr>
                                
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <%= f.submit "Update",:class=>"btn-u btn-block" %>
            </div>
        </div>

        <% end %>

    </div>
    <!--End Reg Block-->
</div><!--/container-->
<!--=== End Content Part ===-->

