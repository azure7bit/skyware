var $form = $("form#new_blog_comment");
<% if @comment.save %>
  $("#comments").append("<%= escape_javascript(render(@comment)) %>");
  $($(".new-comment").attr("data-id", "<%= @comment.post.id %>")[0]).append("<%= escape_javascript(render('company_profiles/comments', comment: @comment)) %>");
  $form.get(0).reset();
  $("form#edit_post_"+"<%= @comment.post.id %>").get(0).reset();
<% else %>
  $form.html("<%= escape_javascript(render(partial:'form', locals: { post: @comment.post, comment: @comment })) %>");
<% end %>
