<div class='row'>
    <div class='col-md-12 comment-reply'>

        <%= link_to "Reply", "#", class: 'btn btn-success pull-right link-reply', style: "margin-top: -10px; margin-bottom: 10px;" %>

        <%= simple_form_for(:conversation, url: :conversations, :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }) do |f| %>
        <form role="form">
            
            <div class="smallMenuItems">
                <%= f.submit "Reply", class: 'btn btn-success pull-right btn_reply', :style => "display: none;" %>
            </div>

            <% if recipient.present? %>
                <%= f.hidden_field :recipient, :value => recipient.email %>
            <% end %>
            <div class="form-group">
                <%= f.hidden_field :subject, value: title %>
            </div>
            <div class="form-group">
                <%= f.text_area :body, :rows => 3, :class => "form-control", placeholder: "MESSAGE CONTENT", :style => 'display: none;' %>
            </div>
        </form>
        <% end %>
    </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.link-reply').each(function(){
      $(this).click(function(e){
        $(this).hide();
        $(this).parent('.comment-reply').find('form.conversation textarea').show();
        $(this).parent('.comment-reply').find('form.conversation .btn_reply').show();
        e.preventDefault();
      });
    });
  });
</script>