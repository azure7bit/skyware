<div class="container">
    <!-- Main component for a primary marketing message or call to action -->
    <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-12 col-sm-9">
            <p class="pull-right visible-xs">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">
                    Toggle nav
                </button>
            </p>
            <div class="jumbotron">
                <div class="table-responsive">
                    <h1>Company Profiles</h1>
                    <table class="table table-striped">
                        <thead>
                            <th>
                                Admin
                            </th>
                            <th>
                                Company
                            </th>
                            <th>
                                Website
                            </th>
                            <th>
                                Street
                            </th>
                            <th>
                                City
                            </th>
                            <th>
                                State
                            </th>
                            <th>
                                Zip
                            </th>
                            <th>
                                Country
                            </th>
                            <th>
                                Est.
                            </th>
                            <th>
                                Menu
                            </th>
                        </thead>
                        <% @company_profiles.each do |company_profile| %>
                        <tr>
                            <td>
                                <%= company_profile.super_admin_id %>
                            </td>
                            <td>
                                <%= company_profile.company_name %>
                            </td>
                            <td>
                                <%= company_profile.website %>
                            </td>
                            <td>
                                <%= company_profile.hq_street_address %>
                            </td>
                            <td>
                                <%= company_profile.hq_city %>
                            </td>
                            <td>
                                <%= company_profile.hq_state %>
                            </td>
                            <td>
                                <%= company_profile.hq_zipcode %>
                            </td>
                            <td>
                                <%= company_profile.hq_country %>
                            </td>
                            <td>
                                <%= company_profile.company_establishment_date %>
                            </td>
                            <td>
                                <%= link_to 'Show', company_profile %>
                                <%= link_to 'Edit', edit_company_profile_path(company_profile) %>
                                <%= link_to 'Remove', company_profile, method: :delete, data: { confirm: 'Are you sure?' } %>
                            </td>
                        </tr>
                        <% end %>
                    </table class="table">
                </div>
            </div>
        </div>
        <!--/span-->
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
            <div class="well sidebar-nav">
                <ul class="nav">
                    <li>
                        Navigation
                    </li>
                    <li>
                        <%= link_to 'New Company profile', new_company_profile_path %>
                    </li>
                </ul>
            </div>
            <!--/.well -->
        </div>
        <!--/span-->
    </div>
    <!--/row-->
</div>
<!-- /container -->
