<div class="container">
    <div class="row">
        <!-- Begin Content -->
        <div class="col-md-9">
            <div class="row margin-bottom-10">
                <%= gmaps4rails(@json) %>
                <h3><b>Location Name: </b><%= @location.name %></h3>
                <h3><b>Location: </b><%= @location.gmaps4rails_address %></h3>
                <div class="table-responsive">
                    <h2>Managers:</h2>
					<% if @managers.present?  %>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @managers.each do |manager| %>
                            <tr>
                                <td>
                                    <%= link_to "#{manager.name}", location_manager_path(@location, manager) %>
                                </td>
                                <td>
                                    <%= link_to "#{manager.title}", location_manager_path(@location, manager) %>
                                </td>
                                <td>
                                    <%= link_to "Cancel Manager's Account", location_manager_path(@location, manager), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger" %>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
					<% else %>
					<h3 class="text-center">No managers :(</h3>
					<% end %>
                </div>
                <div class="table-responsive">
                    <h2>Staff/Employees:</h2>
					<% if @employees.present? %>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @employees.each do |employee| %>
                            <tr>
                                <td>
                                    <%= link_to "#{employee.name}", business_employee_path(employee) %>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
					<% else %>
					   <h3 class="text-center">No staff/employees :(</h3>
                    <% end %>
                </div>
                <div class="smallMenuItems">
                    <%#= link_to 'Create New Employee', new_business_employee_path(@business) %>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="well sidebar-nav">
                <ul class="nav">
                    <li>
                        Navigation
                    </li>
                    <li>
                        <%= link_to "Add Manager".html_safe, new_location_manager_path(@location) %>
                        <%= link_to 'Edit Location', edit_location_path(@location) %>
                    </li>
                </ul>
            </div>
        </div>
        <!-- End Sidebar -->
    </div>
</div>
