<head>
    <title>Unify | Coming Soon Page..</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- CSS Global Compulsory-->
    <link rel="stylesheet" href="../assets/registration/bootstrap.min.css">
    <link rel="stylesheet" href="../assets/registration/style.css">
    <link rel="stylesheet" href="../assets/registration/header1.css">
    <link rel="stylesheet" href="../assets/registration/responsive.css">
    <link rel="shortcut icon" href="favicon.ico">        
    <!-- CSS Implementing Plugins -->    
    <link rel="stylesheet" href="../assets/registration/font-awesome.css">
    <!-- CSS Page Style -->    
    <link rel="stylesheet" href="../assets/registration/page_log_reg_v2.css">    
    <!-- CSS Theme -->    
    <link rel="stylesheet" href="../assets/registration/default.css" id="style_color">

    <script type="text/javascript" src="../assets/live_validation.js"></script>
</head> 

<body>    
<div class="container">
    <!--Reg Block-->
    <div class="reg-block">
        <div class="reg-block-header">
            <h2>Sign Up</h2>
            
            <p>Already Signed Up? Click <a class="color-green" href="<%=user_login_path%>">Sign In</a> to login your account.</p>
        </div>
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "reg-page"}) do |f| %>
              <%= f.error_notification %>
        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="icon-envelope"></i></span>
             <%= f.text_field :email,:placeholder=>"Email", :required => true, :autofocus => true,:class=>"form-control margin-bottom-20" %> 
        </div>

        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="icon-user"></i></span>
            <%= f.text_field :subdomain ,:class=>"form-control margin-bottom-20",:placeholder=>"HQ ID (_____.skyhq.com)"%>
        </div>
        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="icon-lock"></i></span>
            <%= f.password_field :password, :required => true ,:class=>"form-control margin-bottom-20",:placeholder=>"Password" %>
        </div>
        <div class="input-group margin-bottom-30">
            <span class="input-group-addon"><i class="icon-key"></i></span>
             <%= f.password_field :password_confirmation, :required => true ,:class=>"form-control margin-bottom-20",:placeholder=>"Password Confirmation" %>
        </div>
        <hr>
        <label class="checkbox">
            <input type="checkbox"> 
            <p>I read <a target="_blank" href="page_terms.html">Terms and Conditions</a></p>
        </label>
                                
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                               <%= f.button :submit, "Register",:class=>"btn-u btn-block" %>                                       
            </div>
        </div>

        <% end %>
                    <%= render "citizens/shared/links" %>

    </div>
    <!--End Reg Block-->
</div><!--/container-->
<!--=== End Content Part ===-->

<script>
    var f1 = new LiveValidation('citizen_email');
    f1.add( Validate.Presence );
    f1.add( Validate.Email );

    var f2 = new LiveValidation('citizen_subdomain');
    f2.add( Validate.Presence );


    var f3 = new LiveValidation('citizen_password');
    f3.add( Validate.Presence );

    var f19 = new LiveValidation('citizen_password_confirmation');
    f19.add( Validate.Confirmation, { match: 'citizen_password' } );
</script>


<!-- JS Page Level -->           

