<h1>Listing managers</h1>

<table>
  <tr>
    <th>Business</th>
    <th>Name</th>
    <th>Password</th>
    <th>Password confirmation</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @managers.each do |manager| %>
  <tr>
    <td><%= manager.business_id %></td>
    <td><%= manager.name %></td>
    <td><%= manager.password %></td>
    <td><%= manager.password_confirmation %></td>
    <td><%= manager.email %></td>
    <td><%= link_to 'Show', business_manager_path(@business, manager) %></td>
    <td><%= link_to 'Edit', edit_business_manager_path(@business, manager) %></td>
    <td><%= link_to 'Destroy', "/businesses/#{@business.id}/managers/#{manager.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

