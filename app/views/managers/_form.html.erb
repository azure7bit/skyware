<%= simple_form_for([@business, @manager]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%#= f.input :business_id, :as => :hidden, :value => @business.id %>
    <%= f.input :title %>
  	<%= f.input :email %>
  	<%= f.input :password %>
