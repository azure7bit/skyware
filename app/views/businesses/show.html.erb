<div class="container">
    <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-12 col-sm-9">
            <p class="pull-right visible-xs">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">
                    Toggle nav
                </button>
            </p>
            <div class="jumbotron">
                <%= gmaps4rails(@json) %>
                <h3><b>Location Name: </b><%= @business.name %></h3>
                <h3><b>Location: </b><%= @business.gmaps4rails_address %></h3>
                <% unless @managers.nil? %>
                <h2 style="text-decoration:underline;">Managers</h2>
                <div class="table-responsive">
                    <table id="businesses" class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @managers.each do |manager| %>
                            <tr>
                                <td>
                                    <%= link_to "#{manager.name}", business_manager_path(@business, manager) %>
                                </td>
                                <td>
                                    <%= link_to "#{manager.title}", business_manager_path(@business, manager) %>
                                </td>
                                <td>
                                    <%= link_to "Cancel Manager's Account", business_manager_path(@business, manager), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger" %>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
                <!-- <h2>Staff/Employees</h2> -->
                <ul>
                    <%# @employees.each do |employee| %>
                    <li>
                        <%#= link_to "#{employee.name}", business_employee_path(employee) %>
                    </li>
                    <%# end %>
                </ul>
                <div class="smallMenuItems">
                    <%= link_to 'Go Back', root_path, :class => "btn btn-warning" %>
                    <%#= link_to 'Create New Employee', new_business_employee_path(@business) %>
                </div>
                <% end %>
            </div>
        </div>
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
            <div class="well sidebar-nav">
                <ul class="nav">
                    <li>
                        Navigation
                    </li>
                    <li>
                        <%= link_to "Add Manager".html_safe, new_business_manager_path(@business) %>
                        <%= link_to 'Edit Location', edit_business_path(@business) %>
                    </li>
                </ul>
            </div>
            <!--/.well -->
        </div>
    </div>
