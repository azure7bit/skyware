

 <!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Paul Laros">
    <link rel="shortcut icon" href="favicon.ico">

    <title> <%= yield(:title_subdomain) %> | SkyHQ </title>

    <!-- Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro%3A400%2C400italic%2C700" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <!-- <link href="../assets/blog/bootstrap.min.css" rel="stylesheet">
    <link href="../assets/blog/font-awesome.min.css" rel="stylesheet">
    <link href="../assets/blog/bootstrap-social.css" rel="stylesheet"> -->
    <%= stylesheet_link_tag :blog %>
    <%= stylesheet_link_tag 'blog/bootstrap-social.css' %>
    <%= stylesheet_link_tag 'xcustom_pagination' %>

    <!-- Styles -->
    <!-- <link href="../assets/blog/main.css" rel="stylesheet"> -->
    <%= stylesheet_link_tag 'blog/main.css' %>
    <%= javascript_include_tag :blog %>

    <!-- Loading bar -->
    <!-- <script src="../assets/blog/pace.min.js"></script> -->

    <%#= javascript_include_tag 'blog/pace.min' %>

    <!-- HTML5 shiv for IE8 support -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <![endif]-->
    <style type="text/css">
    .sidebar {
      top: 0!important;
    }
    .header{
      height: 30px;
    }
     div.entry-description { 
      white-space: pre-wrap !important;      /* CSS3 */
      white-space: -moz-pre-wrap !important; /* Firefox */
      white-space: -pre-wrap !important;     /* Opera <7 */
      white-space: -o-pre-wrap !important;   /* Opera 7 */
      word-wrap: break-word !important;
    }
    article, aside, details, figcaption, figure, footer, header, hgroup, main, nav, section, summary {
      display: block;
    }
    #header {
      background-color: #F3F3F3 !important;
      background-image: linear-gradient(to bottom, #F3F3F3, #E2E2E2) !important;
      background-repeat: repeat-x !important;
      display: block !important;
      height: 49px !important;
      margin: 0 !important;
      padding: 0 13px 0 0 !important;
      position: relative !important;
    }
    </style>
  </head>

  <body>
    <header id="header">
    <hgroup>
      <h1 class="site-title text-center" style="font-size: 25px; padding-top: 6px;">
        <span id="logo">
          <a href="<%= root_path %>">
            <%= image_tag 'img/logo.png', alt: "SmartAdmin" %>
          </a>
        </span>
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span><i class="glyphicon glyphicon-user"></i></span>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" style="width: 20px;">
              <li><a href="<%= login_path %>" style="text-align: left;">Login</a></li>
              <li><a href="<%= register_path %>" style="text-align: left;">Register</a></li>
            </ul>
        </div>
      </h1>
    </hgroup>
    </header>
    <div class='container'>
      <%= yield %>
    </div>

  <!-- Scripts -->
  <!-- <script src="../assets/blog/jquery-1.11.0.min.js"></script>
  <script src="../assets/blog/custom.js"></script> -->
  </body>
</html>