  <%= render 'layouts/header' %>
  <%= render 'shared/notice'  %>

  <div class="container <%= page?(:home, :index) ? '' : 'strdBox' %>">
    <%= yield %>
    <%= render 'layouts/footer' %>
  </div>

  <%= render 'shared/add_question' %>
