<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= meta_tags                %>
  <%= favicon                  %>
  <%= stylesheets :application %>
  <%= javascripts :application %>
  <%= google_analytics         %>
  <%= yield(:head)             %>
