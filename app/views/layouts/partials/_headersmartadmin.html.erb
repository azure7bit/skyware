            <%#= image_tag 'img/logo.png', alt: "SmartAdmin", :style=>"margin-top: 5px;" %>
            <strong>HQ</strong>
          </a>
          
          <ul class="dropdown-menu" style="width: auto;">
            <li>
              <a href="#" id="show-shortcut">
